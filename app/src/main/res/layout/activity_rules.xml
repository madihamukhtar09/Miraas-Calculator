<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_rules"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbarThumbVertical="@drawable/vertical_scrollview_thumb"
    android:scrollbarTrackVertical="@drawable/vertical_scrollview_track"
    tools:context="com.example.madiha.fyp.MainActivity"
    android:background="#4DB6AC">

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:weightSum="5"
        android:background="@drawable/ripple_effect">


        <ImageView
            android:layout_width="218dp"
            android:layout_height="271dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_x="59dp"
            android:layout_y="11dp"
            android:background="@drawable/cycle" />


        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="89dp"
            android:layout_height="68dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_weight="0.1"
            android:layout_x="61dp"
            android:layout_y="292dp"
            android:background="@drawable/arrowleft"
            android:onClick="backToCalculate" />


        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="89dp"
            android:layout_height="68dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_weight="0.1"
            android:layout_x="188dp"
            android:layout_y="292dp"
            android:background="@drawable/arrowright"
            android:onClick="moveToInfo" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_x="12dp"
            android:layout_y="370dp">

            <ImageView
                android:id="@+id/fac1"
                android:layout_width="70dp"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/coin" />

            <ImageView
                android:id="@+id/fac9"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/coin" />

            <ImageView
                android:id="@+id/fac8"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/coin" />

            <ImageView
                android:id="@+id/fac4"
                android:layout_width="70dp"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/coin" />
        </LinearLayout>




    </AbsoluteLayout>
</ScrollView>


